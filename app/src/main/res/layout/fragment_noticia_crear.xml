<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".ui.noticia.NoticiaCrearFragment">

    <EditText
        android:id="@+id/etTituloNotCrear"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:autofillHints="yes"
        android:background="#B3FBFBFB"
        android:ems="10"
        android:hint="@string/titulo"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etCuerpoNotCrear"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginTop="60dp"
        android:autofillHints="yes"
        android:background="#B3FBFBFB"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/cuerpo"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTituloNotCrear"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btCrearNoticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#001AFF"
        android:text="@string/crear"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_guardar"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCuerpoNotCrear"
        app:strokeColor="#00FF0C"
        app:strokeWidth="3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>